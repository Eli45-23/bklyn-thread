<svg width="400" height="400" viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="400" height="400" fill="url(#bgGradient)"/>
  
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f1f5f9;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e2e8f0;stop-opacity:1" />
    </linearGradient>
    
    <linearGradient id="poloGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e40af;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#1d4ed8;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1e3a8a;stop-opacity:1" />
    </linearGradient>
    
    <linearGradient id="collarGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e3a8a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#172554;stop-opacity:1" />
    </linearGradient>
    
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="2" dy="6" stdDeviation="4" flood-color="#000000" flood-opacity="0.2"/>
    </filter>
    
    <filter id="fabric" x="0%" y="0%" width="100%" height="100%">
      <feTurbulence baseFrequency="1.2" numOctaves="3" seed="4" type="fractalNoise"/>
      <feColorMatrix type="saturate" values="0"/>
      <feComponentTransfer>
        <feFuncA type="discrete" tableValues="0.04 0.06 0.04 0.07"/>
      </feComponentTransfer>
      <feComposite in2="SourceGraphic" operator="multiply"/>
    </filter>
  </defs>

  <!-- Polo shirt body -->
  <path d="M85 120 L85 100 Q85 85 100 85 L125 85 Q145 65 165 65 L235 65 Q255 65 275 85 L300 85 Q315 85 315 100 L315 120 L345 135 L345 175 L315 165 L315 350 Q315 365 300 365 L100 365 Q85 365 85 350 L85 165 L55 175 L55 135 Z" 
        fill="url(#poloGradient)" 
        stroke="#1e3a8a" 
        stroke-width="1"
        filter="url(#shadow)"/>
  
  <!-- Fabric texture overlay (pique pattern) -->
  <path d="M85 120 L85 100 Q85 85 100 85 L125 85 Q145 65 165 65 L235 65 Q255 65 275 85 L300 85 Q315 85 315 100 L315 120 L345 135 L345 175 L315 165 L315 350 Q315 365 300 365 L100 365 Q85 365 85 350 L85 165 L55 175 L55 135 Z" 
        fill="url(#poloGradient)" 
        filter="url(#fabric)"
        opacity="0.3"/>

  <!-- Collar -->
  <path d="M165 65 L175 55 L225 55 L235 65 Q200 75 165 65 Z" 
        fill="url(#collarGradient)" 
        stroke="#172554" 
        stroke-width="1"/>
  
  <!-- Collar fold line -->
  <path d="M170 60 L230 60" stroke="#172554" stroke-width="0.5" opacity="0.7"/>

  <!-- Placket -->
  <path d="M195 65 L195 125 Q200 130 205 125 L205 65" 
        fill="none" 
        stroke="#172554" 
        stroke-width="2"/>

  <!-- Buttons -->
  <circle cx="200" cy="80" r="5" fill="#172554" stroke="#1e40af" stroke-width="1"/>
  <circle cx="200" cy="100" r="5" fill="#172554" stroke="#1e40af" stroke-width="1"/>
  <circle cx="200" cy="120" r="5" fill="#172554" stroke="#1e40af" stroke-width="1"/>
  
  <!-- Button holes -->
  <circle cx="200" cy="80" r="2" fill="#1e40af"/>
  <circle cx="200" cy="100" r="2" fill="#1e40af"/>
  <circle cx="200" cy="120" r="2" fill="#1e40af"/>

  <!-- Sleeve cuffs -->
  <path d="M55 135 L55 155" stroke="#172554" stroke-width="4"/>
  <path d="M345 135 L345 155" stroke="#172554" stroke-width="4"/>

  <!-- Side vents -->
  <path d="M85 340 L85 350" stroke="#172554" stroke-width="2"/>
  <path d="M315 340 L315 350" stroke="#172554" stroke-width="2"/>

  <!-- Bottom hem -->
  <path d="M85 350 L315 350" stroke="#172554" stroke-width="3"/>

  <!-- Embroidery area highlight -->
  <rect x="160" y="150" width="80" height="20" rx="3" 
        fill="none" 
        stroke="#60a5fa" 
        stroke-width="1" 
        stroke-dasharray="2,2" 
        opacity="0.6"/>

  <!-- Pique texture pattern -->
  <defs>
    <pattern id="piquePattern" x="0" y="0" width="8" height="8" patternUnits="userSpaceOnUse">
      <circle cx="4" cy="4" r="1" fill="#1e3a8a" opacity="0.1"/>
    </pattern>
  </defs>
  <rect x="85" y="85" width="230" height="280" fill="url(#piquePattern)"/>

  <!-- Product details -->
  <text x="200" y="290" text-anchor="middle" font-family="system-ui, sans-serif" font-size="16" font-weight="600" fill="#1e293b">Polo Shirt</text>
  <text x="200" y="310" text-anchor="middle" font-family="system-ui, sans-serif" font-size="12" fill="#64748b">100% Pique Cotton</text>
  <text x="200" y="325" text-anchor="middle" font-family="system-ui, sans-serif" font-size="11" fill="#94a3b8">Professional Fit</text>

  <!-- Brand tag -->
  <rect x="280" y="340" width="20" height="10" rx="1" fill="#dc2626"/>
  <text x="290" y="347" text-anchor="middle" font-family="system-ui, sans-serif" font-size="5" font-weight="bold" fill="white">POLO</text>

</svg>